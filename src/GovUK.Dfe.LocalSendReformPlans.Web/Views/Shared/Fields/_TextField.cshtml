@using GovUK.Dfe.LocalSendReformPlans.Web.Utilities
@using GovUk.Frontend.AspNetCore.TagHelpers
@using Microsoft.AspNetCore.Html;
@model GovUK.Dfe.LocalSendReformPlans.Web.Services.FieldViewModel
@{
    var isRequired = Model.Field.Required ?? true;
    var validationAttributes = new HtmlString(Model.ValidationAttributes);
    var labelClasses = Model.Field.Label.IsVisible ? "govuk-label govuk-label--m" : "govuk-visually-hidden";
}

    <govuk-input id="@Model.Id"
                 name="Data[@Model.Field.FieldId]"
                 value="@Model.CurrentValue"
                 data-field-id="@Model.Field.FieldId">
            <govuk-input-label class="@labelClasses">
                    @Model.Field.Label.Value
                </govuk-input-label>

                @{
                    var (hintHtml, hintClass) = MarkdownSafe.RenderHintWithClass(Model.Field.Tooltip);
                }
                <govuk-input-hint class="@hintClass">
                    @Html.Raw(hintHtml)
                </govuk-input-hint>
                @if (Model.ErrorMessage != String.Empty)
                {
        <govuk-input-error-message><span class="govuk-visually-hidden">Error: </span>@Model.ErrorMessage</govuk-input-error-message>
                }
    </govuk-input>
